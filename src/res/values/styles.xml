<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FormulaTXTheme" parent="android:Theme.Holo">
        <item name="android:windowBackground">@drawable/general_bg</item>
        <item name="android:actionBarStyle">@style/FormulaTXTheme.Widget.ActionBar</item>
    </style>

    <style name="FormulaTXTheme.NoActionBar" parent="android:Theme.Holo.NoActionBar">
    </style>

    <style name="FormulaTXTheme.Widget.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_color</item>
    </style>

    <style name="left_menu_row">
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="left_menu_item_image">
        <item name="android:layout_width">@android:dimen/app_icon_size</item>
        <item name="android:layout_height">@android:dimen/app_icon_size</item>
    </style>
    <style name="menu_item_row" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:background">@drawable/click_menu_item</item>
    </style>
    <style name="weather_temperature">
        <item name="android:textSize">60sp</item>
        <!--item name="android:fontFamily">Roboto-Light</item-->
    </style>
    <style name="weather_country">
        <item name="android:textSize">17sp</item>
        <!--item name="android:fontFamily">Roboto-Regular</item-->
    </style>
    <style name="weather_main">
        <item name="android:textSize">14sp</item>
        <!--item name="android:fontFamily">Roboto-Light</item-->
    </style>
    <style name="weather_image">
        <item name="android:layout_width">@android:dimen/app_icon_size</item>
        <item name="android:layout_height">@android:dimen/app_icon_size</item>
    </style>
    <style name="news_list">
    </style>
    <style name="main_text">
        <!--item name="android:fontFamily">SFUIText-Regular</item-->
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="main_text_small">
        <!--item name="android:fontFamily">SFUIText-Regular</item-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="main_text_small_10">
        <!--item name="android:fontFamily">SFUIText-Regular</item-->
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="menu_item_caption_padded" parent="main_text">
        <item name="android:paddingLeft">30dp</item>
    </style>
    <style name="main_menu_image">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="menu_item_icon_size">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="gridview_gallery">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:numColumns">2</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>