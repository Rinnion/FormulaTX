<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mtl_ll_background">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150sp" android:layout_gravity="center_horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="150sp" android:layout_gravity="center_horizontal"
                android:gravity="center">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:id="@+id/mtl_iv_partner_1"
                        android:scaleType="fitCenter"/>

                <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:id="@+id/mtl_iv_partner_2"
                        android:layout_marginLeft="40dp"
                        android:scaleType="fitCenter"/>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Main tournament anme"
                    android:id="@+id/mtl_tv_name"/>

        </LinearLayout>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mtl_lv_menu"
    />

</LinearLayout>