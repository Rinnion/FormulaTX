<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingTop="5dp" android:paddingBottom="5dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="@drawable/bkg_black" android:padding="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/imageView" android:src="#ffbacfff" android:layout_weight="1"
                    android:paddingLeft="5dp" android:paddingRight="5dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="#"
                    android:id="@+id/textView3"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="123456333"
                    android:id="@+id/dil_tv_identity"/>
            <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:id="@+id/imageView3"
                       android:src="#ffbacfff" android:layout_weight="1" android:paddingLeft="5dp"
                       android:paddingRight="5dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dil_iv_share" android:src="@drawable/ic_action_share"/>
            TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="109"
            android:id="@+id/mil_tv_like_count" android:singleLine="true" android:gravity="center"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/dil_iv_like" android:src="@drawable/ic_action_not_important"/>
            TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" android:text="25"
            android:id="@+id/mil_tv_comment_count" android:singleLine="true" android:gravity="center"/>
            ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/imageView2" android:src="@drawable/ic_action_chat"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Content of draft"
                android:id="@+id/dil_tv_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="tags"
                android:id="@+id/dil_tv_tags"/>
    </LinearLayout>
</LinearLayout>