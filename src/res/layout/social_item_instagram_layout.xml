<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              android:gravity="center_horizontal"
              android:weightSum="1">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_horizontal">

        <ImageView
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:id="@+id/siil_iv_image"
                android:src="@drawable/logo_splash_screen"
                android:scaleType="fitCenter"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content of instagram comment Content of instagram comment Content of instagram comment Content of instagram comment Content of instagram comment Content of instagram comment Content of instagram comment "
                android:id="@+id/siil_tv_text"
                android:layout_marginTop="20dp"
                style="@style/main_text_small"/>
    </LinearLayout>

</LinearLayout>