<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/nav_mt_about"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              style="@style/menu_item_row"
              android:background="@drawable/white_rounded_10"
              android:padding="6dp"
              android:minHeight="@dimen/person_image_size">


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/string_tournament_about"
            android:id="@+id/itml_text"
            android:layout_weight="1"
            style="@style/main_text"
            android:padding="6dp"/>

    <include layout="@layout/include_next_item"/>
</LinearLayout>