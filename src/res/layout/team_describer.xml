<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal" android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              tools:showIn="@layout/item_table_layout">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" android:layout_weight="1">
        <include layout="@layout/gamer_describer" android:id="@+id/td_rl_gamer_1"/>
        <include layout="@layout/gamer_describer" android:id="@+id/td_rl_gamer_2" android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                  android:layout_height="fill_parent" android:gravity="center_vertical|right"
                  android:minHeight="@dimen/match_table_score_size"
    >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itl_iv_shot"
                android:src="@drawable/tennis_ball_icon"/>

        <TextView
                android:layout_width="@dimen/match_table_score_size"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/itl_tv_count"
                android:gravity="center"
                android:layout_alignParentTop="true"/>

        <TextView android:layout_width="@dimen/match_table_score_size"
                  android:layout_height="match_parent"
                  android:text="2"
                  android:id="@+id/itl_tv_round_1"
                  android:gravity="center"
                  android:layout_alignParentTop="true"
                  android:layout_marginLeft="7dp"/>
        <TextView android:layout_width="@dimen/match_table_score_size"
                  android:layout_height="match_parent"
                  android:text="2"
                  android:id="@+id/itl_tv_round_2"
                  android:layout_alignBottom="@+id/textView5"
                  android:gravity="center" android:layout_marginLeft="7dp"/>
        <TextView android:layout_width="@dimen/match_table_score_size"
                  android:layout_height="match_parent"
                  android:text="2"
                  android:id="@+id/itl_tv_round_3"
                  android:gravity="center"
                  android:layout_marginLeft="7dp"/>

    </LinearLayout>
</LinearLayout>