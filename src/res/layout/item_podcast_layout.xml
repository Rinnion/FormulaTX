<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:paddingBottom="8dp"
                  android:paddingTop="8dp">
        <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/imgLogo" android:layout_marginLeft="14dp" android:layout_marginRight="20dp"
                android:src="@drawable/logo_splash_screen"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/ipl_text_title"
            android:textColor="#ffffff" android:textSize="15sp" android:text="St.Peterburg open"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/ipl_text_desc"
                      android:textColor="#d8d8d8" android:textSize="13sp"
                      android:text="Трансляция первой игры четверти финала"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/ipl_text_date"
                      android:textColor="#929292" android:textSize="10sp"
                      android:text="14.12.15 в 10:00"/>
        </LinearLayout>
    <ImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/imageView7"
               android:src="@drawable/play_media_icon" android:layout_marginRight="30dp"
               android:layout_marginLeft="10dp"/>

</LinearLayout>
